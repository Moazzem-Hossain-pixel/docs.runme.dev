{
  "name": "runme.dev",
  "private": true,
  "workspaces": [
    "workspaces/*"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:workspaces": "npm run build --workspaces",
    "build:targetDir": "cp -r ./workspaces/docs/build ./build && cp -r ./workspaces/frontpage/build/. ./build",
    "clean": "run-p clean:*",
    "clean:build": "rimraf ./build workspaces/**/build",
    "clean:next": "rimraf workspaces/**/.next",
    "clean:docusaurus": "rimraf workspaces/**/.docusaurus"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1"
  }
}
